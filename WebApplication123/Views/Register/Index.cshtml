@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Register Now</h3>
		<div class="inner-sec">
			<div class="login p-5 bg-light mx-auto mw-100">
				@using(Html.BeginForm("Index", "Register", FormMethod.Post))
				{
				@await Component.InvokeAsync("CountryList")

					<div class="form-row">
						<div class="col-md-6 mb-3">
							<label for="validationCustom01">First name & last name</label>
							@Html.TextBoxFor(x=>x.WriterName)
							@Html.ValidationMessageFor(x=>x.WriterName)
							@* <input type="text" class="form-control" id="validationDefault01" name="WriterName" placeholder="" required=""> *@
						</div>
						<div class="col-md-6 mb-3">
							<label for="validationCustom02">mail address</label>
							@Html.TextBoxFor(x => x.WriterMail)
							@Html.ValidationMessageFor(x => x.WriterMail)
							@* <input type="email" class="form-control" id="validationDefault02" name="WriterMail" placeholder="" required=""> *@
						</div>
					</div>
					<div class="form-row">
						<div class="form-group col-md-6">
							<label for="exampleInputPassword1 mb-2">Password</label>
							@Html.TextBoxFor(x => x.WriterPassword)
							@Html.ValidationMessageFor(x => x.WriterPassword)
							@* <input type="password" class="form-control" id="password1" placeholder="" name="WriterPassword" required="">*@

						</div>
						<div class="form-group col-md-6">
							<label for="exampleInputPassword2 mb-2">Confirm Password</label>
							<input type="password" class="form-control" id="password2" name="password2" placeholder="" required="">
							@if (ViewData.ModelState["ConfirmPassword"]?.Errors.Count > 0)
							{
								<span class="text-danger">@ViewData.ModelState["ConfirmPassword"].Errors[0].ErrorMessage</span>
							}
						</div>

					</div>
					<div class="form-row">
						<div class="form-group col-md-6">
							<label for="exampleInputPassword1 mb-2">dosya yolu</label>
							<input type="password" class="form-control" id="password1" placeholder="" name="WriterImage" required="">
						</div>
					</div>
					<button type="submit" class="btn btn-primary submit mb-4">Register</button>
					<p>
						<a href="#">By clicking Signup, I agree to your terms</a>
					</p>
				}

			</div>
		</div>
	</div>
</section>

