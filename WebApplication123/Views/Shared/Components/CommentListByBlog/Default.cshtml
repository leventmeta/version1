@model IEnumerable<EntityLayer.Concrete.Comment>

<div class="comment-top">
    <h4>Comments</h4>

    @if (!Model.Any())
    {
        <h1>There are no comments yet</h1>
    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="media">
                <img src="~/web/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@item.CommentUserName</h5>
                    <p>@item.Commenttitle</p>
                </div>
            </div>
        }
    }
</div>
