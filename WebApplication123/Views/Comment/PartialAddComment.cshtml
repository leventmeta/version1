<div class="comment-top">
	<h4>Leave a Comment</h4>
	<div class="comment-bottom">
        <form id="AddCommentForm" method="post">
            <input class="form-control" type="text" name="CommentUserName" placeholder="Name" required="">
            <input class="form-control" type="text" name="Commenttitle" placeholder="Title" required="">
            <input class="form-control" type="text" name="CommentContent" placeholder="Content" required="">
            
			<button type="submit" class="btn btn-primary submit">Submit</button>
		</form>
		<div id="message"></div>
	</div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('#AddCommentForm').on('submit', function (event) {
            event.preventDefault(); // Formun normal submit işlemini engeller

            var formData = $(this).serialize(); // Form verilerini serialize eder

            $.ajax({
                url: '@Url.Action("PartialAddComment", "Comment")', // Form verilerini göndereceğiniz action
                type: 'POST',
                data: formData,
                success: function (response) {
                    $('#message').html('<p>Subscription successful!</p>'); // Başarı mesajını göster
                },
                error: function () {
                    $('#message').html('<p>An error occurred. Please try again.</p>'); // Hata mesajını göster
                }
            });
        });
    });
</script>
